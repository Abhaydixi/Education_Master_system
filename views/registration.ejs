<%- include('./header.ejs') %>

<section style="background-color: #6696a0;">
    <div class="container"><br><br>
        <div class="row d-flex justify-content-center align-items-center h-100">

            <div class="col col-xl-10" style="margin-top: 84px;">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row"><br>
                        <div class="col-md-6 col-lg-6 d-none d-md-block">
                            <img src="/images/usadm.webp" alt="login"
                                class="img" style="border-radius: 1rem 0 0 1rem; height: 600px;
                                margin-left: -30px;">
                        </div>
                        <div class="col-md-6 col-lg-6 d-flex align-items-center">
                            <div class="card-body p-4 text-black">
                                <div class="d-flex align-items-center pb-1">
                                    <img src="/images/adimg.jpeg"
                                        class="register_logo" width="160px" height="160px" alt="....">
                                </div>
                                <h4 class="text-center mb-3 pb-3" style="color: #6696a0;">Register Here</h4>
                                <% if(message.length > 0){ %>
                                    <div class="alert alert-danger">
                                        <%= message %>
                                    </div>
                              <%  }  %>
                               
                                <form action="/adminregistration" enctype="multipart/form-data" method="post" class="pt-4">

                                    <div class="form-group mb-4">
                                        <input type="text" name="name" class="form-control form-control-lg"
                                            placeholder="name" >
                                    </div>
                                    <div class="form-group mb-4">
                                        <input type="text" name="email" class="form-control form-control-lg"
                                            placeholder="email" >
                                    </div>
                                    <div class="form-group mb-4">
                                        <input type="password" name="password" class="form-control form-control-lg"
                                            placeholder="password" >
                                    </div>
                                    <div class="form-group mb-4">
                                        <input type="password" name="confirm_password" class="form-control form-control-lg"
                                            placeholder="confirm_password" >
                                    </div>
                                    <!-- <input type="checkbox" onclick="myFunction()">
                                    <span> Show Password</span> -->
                                   
                                   
                                    <div class="form-group text-center">
                                        <button type="submit" class="btn btn-lg btn-block form-control"
                                            style="background: #12587a; color:#ffff;">Register</button>
                                        <br><br>
                                      
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--row end-->
    </div><!--container end-->
    <br><br>

</section>


<%- include('./footer.ejs') %>
