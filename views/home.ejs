<%- include('./header.ejs') %>

    <!--slider start-->

    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">

        <div class="carousel-inner">
            <% s.forEach((item)=>{%>
                <div class="carousel-item active">
                    <img src="<%= item.image.url %>" class="d-block w-100" style="height: 550px;" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h1>
                            <%= item.title %>
                        </h1>
                        <p style="font-size: 25px;">
                            <%= item.description %>
                        </p>
                    </div>
                </div>
                <% }) %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <!--slider end-->

    <!-------------------------------------------- search start------------------------------------------------- -->
    <div class="container-fluid bg-secondary mb-5" style="padding: 30px;">
        <div class="container">
            <form action="/search" method="post">
                <div class="row g-2">
                    <div class="col-md-12">
                        <div class="row g-2">
                            <div class="col-md-10">
                                <input type="text" name="search" placeholder="Search By City Location"
                                    class="form-control py-3 text-center">
                            </div>
                            <div class="col-md-2">
                                <a href="">
                                    <button class="btn btn-danger border-0 w-100 py-3">Search</button>
                                </a>
                            </div>

                        </div>

                    </div>

                </div>
            </form>
        </div>

    </div>

    <!----------------------------------------------Search end---------------------------------------------->

    <div class="mt-5 text-center">
        <h1>Scientific Approach of Finding Best School</h1>
        <p>Experience the Power of Data Analysis</p>
    </div>

    <div class="container ">
        <div class="row ">
            <% c.forEach((item)=>{ %>
                <div class="col-md-4 text-center mb-5 ">
                    <a href="/schoollist/<%= item.title %>" class="text-decoration-none">
                        <img src="<%= item.cityimage.url %>" class="image w-100" alt="">
                        <h3 class="ab animate__heartBeat">
                            <%= item.title %>
                        </h3>
                    </a>
                </div>

                <% }) %>

        </div>
        <!--row end-->
    </div>
    <!--container end-->




    <%- include('./footer.ejs') %>