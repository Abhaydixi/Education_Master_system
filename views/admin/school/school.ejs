<%- include('../sidebar.ejs') %>
    <%- include('../header.ejs') %>

        <div class="content mt-3">
            <div class="animated fadeIn">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between">
                                <div>
                                    <strong class="card-title  text-secondary">School Table</strong>
                                </div>
                                <div>
                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-secondary" data-bs-toggle="modal"
                                        data-bs-target="#ss">Add School</button>
                                </div>
                            </div>
                            <div class="card-body">
                                <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                    <thead class="bg-secondary text-white">
                                        <tr>                                            
                                            <th>Image</th>
                                            <th>School Name</th>
                                            <th> School Address</th>

                                            <th class="text-center"> Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% d.forEach((item)=>{ %>
                                            <tr>
                                               
                                                <td><img src="<%= item.image.url %>" width="50px" alt=""></td>
                                                <td>
                                                    <%= item.schoolname %>
                                                </td>
                                                <td>
                                                    <%= item.address %>
                                                </td>
                                                <td class="text-center">
                                                    <a href="/schoolview/<%= item._id %>" class="btn btn-primary"><i
                                                            class="fa fa-eye" aria-hidden="true"></i></a>
                                                    <a href="/schooledit/<%= item._id %>" class="btn btn-info"><i
                                                            class="fas fa-edit"></i></a>
                                                    <a href="/schooldelete/<%= item._id %>" class="btn btn-danger"><i
                                                            class="fa fa-trash" aria-hidden="true"></i></a>
                                                </td>
                                            </tr>

                                            <% }) %>


                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- .animated -->


        </div><!-- .content -->
        </div><!-- /#right-panel -->



        <!-- Modal -->
        <div class="modal fade" id="ss" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Enter Top School Details</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form method="post" action="/insertschool" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="">Categary:</label>
                                <select name="c_name" class="form-control">
                                    <% c.forEach((item)=>{ %>
                                        <option>
                                            <%= item.title %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>
                            <!-- <div class="mb-3">
                                <label for="">Title:</label>
                                <input type="text" name="title" class="form-control">
                            </div> -->
                            <div class="mb-3">
                                <label for="">Upload image:</label>
                                <input type="file" name="image" class="form-control" />
                            </div>
                            <div class="mb-3">
                                <label for="">School Name:</label>
                                <input type="text" name="schoolname" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label for="">Address:</label>
                                <textarea type="" name="address" class="form-control"></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="">Description:</label>
                                <textarea type="text" name="description" class="form-control"></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="">Instruction_Medium:</label>
                                <input type="text" name="instruction_medium" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label for="">Affiliated_Board:</label>
                                <input type="text" name="affiliated_board" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label for="">Type:</label>
                                <input type="text" name="type" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label for="">Phone_Number:</label>
                                <input type="number" name="phone_number" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label for="">Email:</label>
                                <input type="email" name="email" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label for="">Library:</label>
                                <input type="text" name="library" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label for="">India_Rank:</label>
                                <input type="text" name="india_rank" class="form-control">
                            </div>
                            <div>
                                <button type="submit" class="btn btn-info">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>




        <%- include('../footer.ejs') %>